<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="900.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.Arkanoid.game.Controller.SettingController">
    <children>
        <ImageView fitHeight="900.0" fitWidth="1200.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../images/Background/main.png" />
            </image>
        </ImageView>
        <Slider layoutX="580.0" layoutY="201.0" />
        <Slider fx:id="musicSlider" layoutX="580.0" layoutY="263.0" onMouseDragged="#changeMusicVolume" onMouseReleased="#updateMusicIcon"/>
        <Text layoutX="452.0" layoutY="214.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Sound" />
        <Text layoutX="454.0" layoutY="276.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Music" />
        <Button fx:id="transparentButton" contentDisplay="GRAPHIC_ONLY" layoutX="513.0" layoutY="189.0" mnemonicParsing="false" onAction="#changeSoundState" stylesheets="@styles.css" text="Sound">
            <graphic>
                <ImageView fx:id="soundBtn" fitHeight="44.0" fitWidth="29.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../images/Icon/audioOn.png" />
                    </image>
                </ImageView>
            </graphic>
        </Button>
        <Button fx:id="transparentButton" contentDisplay="GRAPHIC_ONLY" layoutX="513.0" layoutY="251.0" mnemonicParsing="false" onAction="#changeMusicState" stylesheets="@styles.css" text="Music">
            <graphic>
                <ImageView fx:id="musicBtn" fitHeight="44.0" fitWidth="29.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../images/Icon/audioOn.png" />
                    </image>
                </ImageView>
            </graphic>
        </Button>
        <Button fx:id="transparentButton" contentDisplay="GRAPHIC_ONLY" layoutX="35.0" layoutY="42.0" mnemonicParsing="false" onAction="#switchToMainPage" stylesheets="@styles.css" text="Back ">
            <graphic>
                <ImageView fitHeight="62.0" fitWidth="101.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../images/Icon/back.png" />
                    </image>
                </ImageView>
            </graphic>
        </Button>
        <Button fx:id="transparentButton" contentDisplay="GRAPHIC_ONLY" layoutX="116.0" layoutY="42.0" mnemonicParsing="false" onAction="#switchToMainPage" stylesheets="@styles.css" text="Home">
            <graphic>
                <ImageView fitHeight="62.0" fitWidth="101.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../images/Icon/home.png" />
                    </image>
                </ImageView>
            </graphic>
        </Button>
    </children>
</AnchorPane>