<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Text?>

<AnchorPane minHeight="900.0" minWidth="1200.0" prefHeight="900.0" prefWidth="1200.0" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.Arkanoid.game.Controller.SettingController">
    <children>
        <ImageView fitHeight="900.0" fitWidth="1200.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../images/Background/main.png" />
            </image>
        </ImageView>
        <Slider layoutX="545.0" layoutY="250.0" prefHeight="94.0" prefWidth="221.0" />
        <Slider fx:id="musicSlider" layoutX="545.0" layoutY="375.0" onMouseDragged="#changeMusicVolume" onMouseReleased="#updateMusicIcon" prefHeight="35.0" prefWidth="221.0" />
        <Text layoutX="281.0" layoutY="313.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Sound" />
        <Text layoutX="288.0" layoutY="406.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Music" />
        <Button contentDisplay="GRAPHIC_ONLY" layoutX="450.0" layoutY="262.0" mnemonicParsing="false" onAction="#changeSoundState" prefHeight="56.0" prefWidth="66.0" stylesheets="@styles.css" text="Sound">
         <graphic>
                <ImageView fx:id="soundBtn" fitHeight="60.0" fitWidth="84.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../images/Icon/audioOn.png" />
                    </image>
                </ImageView>
         </graphic>
        </Button>
        <Button contentDisplay="GRAPHIC_ONLY" layoutX="447.0" layoutY="357.0" mnemonicParsing="false" onAction="#changeMusicState" prefHeight="60.0" prefWidth="84.0" stylesheets="@styles.css" text="Music">
            <graphic>
                <ImageView fx:id="musicBtn" fitHeight="60.0" fitWidth="84.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../images/Icon/audioOn.png" />
                    </image>
                </ImageView>
            </graphic>
        </Button>
        <Button contentDisplay="GRAPHIC_ONLY" layoutX="35.0" layoutY="42.0" mnemonicParsing="false" onAction="#switchToMainPage" stylesheets="@styles.css" text="Back ">
            <graphic>
                <ImageView fitHeight="62.0" fitWidth="101.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../images/Icon/back.png" />
                    </image>
                </ImageView>
            </graphic>
        </Button>
        <Button fx:id="transparentButton" contentDisplay="GRAPHIC_ONLY" layoutX="116.0" layoutY="42.0" mnemonicParsing="false" onAction="#switchToMainPage" stylesheets="@styles.css" text="Home">
            <graphic>
                <ImageView fitHeight="62.0" fitWidth="101.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../images/Icon/home.png" />
                    </image>
                </ImageView>
            </graphic>
        </Button>
    </children>
</AnchorPane>
