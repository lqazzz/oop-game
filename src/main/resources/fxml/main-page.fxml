<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane fx:id="rootPane" prefHeight="900.0" prefWidth="1200.0" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.Arkanoid.game.Controller.MainPageController">
    <children>
        <ImageView fitHeight="900.0" fitWidth="1200.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../images/default/main.png" />
            </image>
        </ImageView>
        <Button contentDisplay="GRAPHIC_ONLY" layoutX="44.0" layoutY="42.0" mnemonicParsing="false" onAction="#switchToGuide" text="How to play">
            <graphic>
                <ImageView fitHeight="62.0" fitWidth="101.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../images/Icon/information.png" />
                    </image>
                </ImageView>
            </graphic></Button>
        <Button contentDisplay="GRAPHIC_ONLY" layoutX="1075.0" layoutY="42.0" mnemonicParsing="false" onAction="#switchToShop" text="Skin">
            <graphic>
                <ImageView fitHeight="62.0" fitWidth="101.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../images/Icon/store.png" />
                    </image></ImageView>
            </graphic></Button>
        <Button contentDisplay="GRAPHIC_ONLY" layoutX="44.0" layoutY="732.0" mnemonicParsing="false" onAction="#switchToRanking" text="Ranking">
         <graphic>
            <ImageView fitHeight="62.0" fitWidth="101.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../images/Icon/ranking.png" />
               </image>
            </ImageView>
         </graphic></Button>
        <Button contentDisplay="GRAPHIC_ONLY" layoutX="507.0" layoutY="336.0" mnemonicParsing="false" onAction="#switchToModeGame" stylesheets="@styles.css" text="Play">
         <graphic>
                <ImageView fx:id="play" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../images/default/Button/play.png" />
                    </image>
                </ImageView>
         </graphic></Button>
        <Button contentDisplay="GRAPHIC_ONLY" layoutX="506.0" layoutY="431.0" mnemonicParsing="false" onAction="#switchToSetting" prefHeight="35.0" prefWidth="108.0" stylesheets="@styles.css" text="Setting" textAlignment="JUSTIFY">
         <graphic>
                <ImageView fx:id="setting" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../images/default/Button/setting.png" />
                    </image>
                </ImageView>
         </graphic></Button>
        <Button contentDisplay="GRAPHIC_ONLY" layoutX="507.0" layoutY="529.0" mnemonicParsing="false" onAction="#quitGame" stylesheets="@styles.css" text="Quit">
            <graphic>
                <ImageView fx:id="quit" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../images/default/Button/exit.png" />
                    </image>
                </ImageView>
            </graphic></Button>
        <ImageView fitHeight="249.2" fitWidth="711.9" layoutX="230.0" layoutY="93.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../images/default/Title/breakout.png" />
            </image>
        </ImageView>
      <Button contentDisplay="GRAPHIC_ONLY" layoutX="1075.0" layoutY="732.0" mnemonicParsing="false" onAction="#switchToTheme" text="Skin">
         <graphic>
            <ImageView fitHeight="62.0" fitWidth="101.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../images/Icon/list.png" />
               </image>
            </ImageView>
         </graphic>
      </Button>
    </children>
</AnchorPane>
